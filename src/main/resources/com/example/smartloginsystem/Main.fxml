<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="400" prefWidth="663.0" style="-fx-background-color: linear-gradient(to right, #1e3c72, #2a5298);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smartloginsystem.MainController">

    <!-- Left Side Logo Area - Modern Card Style -->
    <AnchorPane prefHeight="400" prefWidth="300" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">
        <ImageView fitHeight="400.0" fitWidth="318.0" layoutX="1.0" layoutY="50.0" preserveRatio="true">
            <image>
                <Image url="@download (5).png" />
            </image>
        </ImageView>
    </AnchorPane>

    <!-- Right Side Panel Buttons -->
    <VBox alignment="CENTER" layoutX="350" layoutY="90" spacing="30">
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Smart Login System" />

        <VBox alignment="CENTER" prefWidth="250" spacing="20">
            <!-- Teacher Panel Button with Icon -->
            <Button fx:id="teacherBtn" onAction="#openTeacherPanel" prefHeight="50" prefWidth="240"
                    style="-fx-background-color: linear-gradient(to right, #ff7e5f, #feb47b); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2); -fx-cursor: hand;"
                    text="Teacher Panel">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <!-- Teacher Icon - Replace with your teacher icon path -->
                        <Image url="@img_3.png" />
                    </ImageView>
                </graphic>
                <font>
                    <Font name="Segoe UI" size="14.0" />
                </font>
                <padding>
                    <Insets left="10" right="10" />
                </padding>
            </Button>

            <!-- Student Panel Button with Icon -->
            <Button fx:id="studentBtn" onAction="#openStudentPanel" prefHeight="50" prefWidth="240"
                    style="-fx-background-color: linear-gradient(to right, #4776E6, #8E54E9); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2); -fx-cursor: hand;"
                    text="Student Panel">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <!-- Student Icon - Replace with your student icon path -->
                        <Image url="@img_2.png" />
                    </ImageView>
                </graphic>
                <font>
                    <Font name="Segoe UI" size="14.0" />
                </font>
                <padding>
                    <Insets left="10" right="10" />
                </padding>
            </Button>
        </VBox>

        <!-- Additional Info Text -->
        <Label style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12px; -fx-font-family: 'Segoe UI';" text="Select your role to continue" />
    </VBox>

    <!-- Decorative Elements -->
    <Circle fill="radial-gradient(center 50% 50%, radius 60%, rgba(255,255,255,0.1), transparent)" layoutX="500" layoutY="320" radius="60" />
    <Circle fill="radial-gradient(center 50% 50%, radius 60%, rgba(255,255,255,0.05), transparent)" layoutX="600" layoutY="80" radius="40" />

</AnchorPane>